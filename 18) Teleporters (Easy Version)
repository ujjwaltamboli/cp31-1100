#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n,c;
        cin>>n>>c;
        vector<long long> store(n,0);
        for (long long i=0;i<n;i++){
            cin>>store[i];
        }

        for (long long i=0;i<n;i++){
            store[i]=store[i]+i+1;
        }

        sort(store.begin(), store.end());
        long long count=0;
        for (long long i=0;i<n;i++){
            if (store[i]<=c){
                count++;
                c=c-store[i];
            }
            else{
                break;
            }
        }
        cout<<count<<endl;

        //T.C.:- O(nlogn)
        //S.C.:- O(n);
    }
    return 0;
}
