#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n,w;
        cin>>n>>w;
        vector<long long> store(n,0);
        for (long long i=0;i<n;i++){
            cin>>store[i];
        }
        long long ini=1;
        long long fin=2*1e9;
        long long ans=-1;
        while (ini<=fin){//log(2*1e9);
            long long h=ini+(fin-ini)/2;
            long long sum=0;
            for (long long i=0;i<n;i++){//n
                sum=sum+max((long long)0,h-store[i]);
            }
            if (sum>w){
                fin=h-1;
            }
            else{
                ans=h;
                ini=h+1;
            }
        }
        cout<<ans<<endl;

        //T.C.:- nlog(2*1e9);
        
    }
    return 0;
}
