#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n;
        cin>>n;
        vector<long long> store(n,0);
        long long count=0;
        long long mini=INT_MAX;
        long long sum=0;
        for (long long i=0;i<n;i++){
            cin>>store[i];
            sum=sum+abs(store[i]);
            if (store[i]<0){
                count++;
                
            }
            if (abs(store[i])<mini){
                mini=abs(store[i]);
            }
        }
        if (count%2==0){
            cout<<sum<<endl;
        }
        else{
            cout<<sum-2*mini<<endl;
        }
    }
    return 0;
}
