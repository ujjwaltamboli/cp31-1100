#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n;
        cin>>n;
        vector<long long> store(n,0);
        for (long long i=0;i<n;i++){
            cin>>store[i];
        }

        sort(store.begin(), store.end()); //nlogn

        long long sum=1;
        bool flag=true;
        if (store[0]!=1){
            cout<<"No"<<endl;
            continue;
        }
        for (long long i=1;i<n;i++){
            if (store[i]>sum){
                flag=false;
            }
            sum=sum+store[i];
        }
        if (!flag){
            cout<<"No"<<endl;
        }
        else{
            cout<<"Yes"<<endl;
        }

        //T.C.:- O(nlogn);
        //S.C.:- O(n)
    }
    return 0;
}
