#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n,k;
        cin>>n>>k;
        vector<long long> a(n,0);
        vector<long long> b(n,0);
        for (long long i=0;i<n;i++){
            cin>>a[i];
        }
        for (long long i=0;i<n;i++){
            cin>>b[i];
        }
        
        long long maxi=0;
        long long maxi2=0;
        long long i=-1;
        long long sum=0;
        while (k!=0){
            i++;
            if (i>=n){
                break;
            }
            k--;
            sum=sum+a[i];
            maxi=max(maxi,b[i]);
            maxi2=max(maxi2,sum+k*maxi);
        }
        cout<<maxi2<<endl;
    }
    return 0;
}
