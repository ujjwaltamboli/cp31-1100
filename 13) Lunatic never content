#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n;
        cin>>n;
        vector<long long> store(n,0);
        for (long long i=0;i<n;i++){
            cin>>store[i];
        }
        long long gcd=0;
        for (long long i=0;i<(n/2);i++){
            gcd=__gcd(gcd,abs(store[i]-store[n-1-i]));
        }
        cout<<gcd<<endl;

        //T.C.:- O(nlogn);
        //S.C.:- O(n);
    }
    return 0;
}
