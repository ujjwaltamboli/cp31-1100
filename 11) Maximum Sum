#include <bits/stdc++.h>
using namespace std;
int main(){
    long long t;
    cin>>t;
    while (t--){
        long long n,k;
        cin>>n>>k;
        vector<long long> store(n,0);
        for (long long i=0;i<n;i++){
            cin>>store[i];
        }
        sort(store.begin(), store.end());
        vector<long long> pre(n,0);
        long long sum=0;
        for (long long i=0;i<n;i++){//O(n)
            sum=sum+store[i];
            pre[i]=sum;
        }
        long long maxi=0;
        for (long long first=0;first<=k;first++){//O(k)
            long long second=k-first;
            long long i=2*first;
            long long j=n-1-second;
            maxi=max(maxi,pre[j]-((i==0)?0:pre[i-1]));
        }
        cout<<maxi<<endl;

        //T.C.:- O(k+n)
        //S.C.:- O(n)
    }
    return 0;
}
