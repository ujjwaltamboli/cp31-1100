#include <bits/stdc++.h>
using namespace std;


bool check(vector<int> &store, int c){
    vector<int> a1;
    int n=store.size();
    for (int i=0;i<n;i++){
        if (store[i]!=c){
            a1.push_back(store[i]);
        }
    }
    int n1=a1.size();
    int i=0;
    int j=n1-1;
    bool flag=true;
    while (i<j){
        if (a1[i]==a1[j]){
            i++;
            j--;
        }
        else{
            flag=false;
            break;
        }
    }
    return flag;
}
int main(){
    int t;
    cin>>t;
    while (t--){
        int n;
        cin>>n;
        vector<int> store(n,0);
        for (int i=0;i<n;i++){
            cin>>store[i];
        }
        int i=0;
        int j=n-1;
        while (i<j && store[i]==store[j]){
            i++;
            j--;
        }
        if (i>=j){
            cout<<"Yes"<<endl;
            continue;
        }
        if (check(store, store[i])| check(store, store[j])){
            cout<<"Yes"<<endl;
        }
        else{
            cout<<"no"<<endl;
        }
    }

    // T.C.:- O(n);
    //S.C.:- O(n);
    return 0;
}
